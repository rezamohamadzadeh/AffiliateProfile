@{
    ViewData["Title"] = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <!-- DataTables -->
    <link href="~/Affiliate/vendors/datatables.net-bs4/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/datatables/buttons.dataTables.min.css" rel="stylesheet" />
}


<div class="row">
    <!-- end page title end breadcrumb -->

</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                
                <h5 class="header-title float-left mb-4">Customer list</h5>
                <br /><br />
                <hr />
                <div class="table-responsive">
                    <table id="myTable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead>
                            <tr>
                                <th>Customer Email</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>



<!-- End Page-content -->
<!-- end main content-->
@section Scripts{
    <!-- Required datatable js -->
    <script src="~/Affiliate/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/Affiliate/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <script src="~/datatables/dataTables.buttons.min.js"></script>
    <script src="~/datatables/buttons.flash.min.js"></script>
    <script src="~/datatables/jszip.min.js"></script>
    <script src="~/datatables/pdfmake.min.js"></script>
    <script src="~/datatables/vfs_fonts.js"></script>
    <script src="~/datatables/buttons.html5.min.js"></script>
    <script src="~/datatables/buttons.print.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            $("#myTable").DataTable({
                dom: 'Bfrtip',
                buttons: [
                    { "extend": "excel", "text": " Export to excel ", "className": "btn btn-primary"},
                    { "extend": "pdf", "text": " Export to pdf ", "className": "btn btn-primary"},
                ],
                "processing": true,
                "serverSide": true, // for process server side
                "ajax": {
                    "url": "/Customers/List",
                    "type": "POST",
                    "datatype": "json"

                },
                "columns": [

                    { "data": "Email", "name": "Email", "autoWidth": true, className: "text-left" }
                ]
            });


        });

    </script>


}
